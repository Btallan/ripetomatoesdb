<h1><%=@movie.title%></h1>
<p><%= @movie.genre%> - <%=@movie.year%></p>
<p><%= @movie.length%> minutes</p>
<h3>Actors</h3>
<% @movie.actors.each do |actor| %>
    <p><%=actor.name%></p>
<% end %>
<h3>Reviews</h3>
<% @movie.reviews.each do |review| %>
    <p><%=review.message%></p>
    <p><%=review.stars%>⭐️</p>    
<% end %>