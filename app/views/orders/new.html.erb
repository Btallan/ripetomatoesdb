<p>Are you sure you want to buy <%=@movie.title%>? </p>

<%= form_tag movie_orders_path do %>
  <article>
   
    <label class="amount">
      <span>Amount: $<%=@movie.price%></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Movie payment"
          data-amount="<%(@movie.price*100).to_i%>"
          data-locale="auto"></script>
<% end %>