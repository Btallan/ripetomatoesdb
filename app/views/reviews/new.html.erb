<h1>New review for<%= @movie.title%></h1>

<%= form_with model: [@movie,@review] do |form| %>
    <div>
        <%= form.label :message%>
        <%= form.text_field :message, required:true%>
    </div>
    <div>
        <%= form.label :stars%>
        <%= form.text_field :stars, required:true%>
    </div>
    
    <%=form.submit "Add reviews" %>
<%end%>